				</TransformGroup>
			</Image.RenderTransform>
		</Image>
		<Canvas x:Name="robosapien" ClipToBounds="True" HorizontalAlignment="Left" Height="103" UseLayoutRounding="False" VerticalAlignment="Top" Width="104">
