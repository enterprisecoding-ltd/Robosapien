<l:ImageViewer x:Class="Com.Enterprisecoding.RobosapienKinect.Viewers.KinectColorViewer"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:l="clr-namespace:Com.Enterprisecoding.RobosapienKinect.Viewers"
               mc:Ignorable="d"
               d:DesignHeight="300" d:DesignWidth="300">
    <Image Name="kinectColorImage"
           Stretch="{Binding Path=Stretch,RelativeSource={RelativeSource AncestorType=l:ImageViewer}}"
           RenderTransformOrigin=".5,.5"
           RenderTransform="{Binding HorizontalScaleTransform,
                             RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type l:ImageViewer}}}" />
</l:ImageViewer>